
<body>

<h1>Books</h1>

<table>
    <thead class="main-title-block">
        <tr class="main-title">
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr> 
    </thead>
</table>    
    
    <div class="main">
        <% @books.each do |book| %>
        <div class="book-list"></div>
            <div class="book-title">
                <span><%= book.title %></span>
            </div>    
            <div class="book-body">
                <span><%= book.body %></span>
            </div>
            <div class="book-redirect">
                <a><%= link_to "Show", book_path(book.id) %></a>
                <a><%= link_to "Edit", edit_book_path(book.id) %></a>
                <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            </div>    
        </div>
        <% end %>   
    </div>    

<h2>New book</h2>
<% if @book.errors.any? %>
     <% @book.errors.count %>errors prohibited book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul> 
    
<% end %>
<div class="form">
    <%= form_with model: @book do |f| %>
        <div class="field">
            <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="field">
            <h4>Body</h4>
            <%= f.text_area :body %>
        </div>
    <%= f.submit 'Create Book' %>
    <% end %>
</div>


</body>
